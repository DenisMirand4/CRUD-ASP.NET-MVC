            //    //$('#eventos-log').html(event.target + ' foi clicado; evento: ' + event.event);
            //    var html = $('#eventos-log').html();
            //    console.log(event);
            //    $('#eventos-log').html(html + '<br>' + event.target.localName + ' foi clicado; evento: ' + event.type);
            //});

        });
    </script>
}

